{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "sourceMap": true,
    "declaration": true,
    "module": "preserve",
    "noEmit": true,

    "lib": ["es2022", "dom", "dom.iterable"],
  },
  "include": ["src/**/*"],
  "exclude": []
}
